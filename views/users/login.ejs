<%- layout('layouts/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: url('/images/background.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            overflow: hidden;
            animation: fadeIn 1s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            filter: blur(8px);
            z-index: -1;
            background: inherit;
        }

        .login-form {
            position: relative;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
            transition: transform 0.3s, box-shadow 0.3s;
            background: rgba(0, 0, 0, 0.5); 
            opacity: 0;
            animation: slideIn 0.6s forwards;
        }

        @keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .login-form:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
        }

        .login-form h2 {
            margin-bottom: 1.5rem;
            font-size: 2rem;
            color: #009970;
            text-align: center;
        }

        .login-form .form-group {
            margin-bottom: 1rem;
            position: relative;
        }

        .login-form label {
            display: block;
            margin-bottom: 0.5rem;
            color: #fff;
            transition: color 0.3s;
        }

        .login-form input {
            width: 100%;
            padding: 0.75rem;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .login-form input:focus {
            border-color: #009970;
            box-shadow: 0 0 8px rgba(0, 153, 112, 0.5);
            outline: none;
        }

        .login-form button {
            width: 100%;
            background-color: #009970;
            color: #fff;
            font-size: 16px;
            padding: 0.75rem;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .login-form button:hover {
            background-color: #00b383;
            transform: scale(1.05);
        }

        .signup-link {
            text-align: center;
            margin-top: 1rem;
            color: #fff;
        }

        .signup-link a {
            color: #00b383;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

        .signup-link a:hover {
            color: #009970;
        }

        @media (max-width: 600px) {
            .login-form {
                padding: 1.5rem;
            }

            .login-form h2 {
                font-size: 1.5rem;
            }

            .login-form input {
                font-size: 14px;
                padding: 0.5rem;
            }

            .login-form button {
                font-size: 14px;
                padding: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-form">
            <h2>Login</h2>
            <form action="/collegeclub/login" method="POST">
                <div id="email-group" class="form-group">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" required>
                </div>
                <div id="password-group" class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="submit">Login</button>
                <!-- Other existing login page content -->
                 <div class="google-btn">
                    <a href="/auth/google" >Sign in with Google</a>
                 </div>

                

            </form>
            <div class="signup-link">
                <p>Not yet registered? <a href="/collegeclub/signup">Sign Up</a></p>
            </div>
        </div>
    </div>
</body>

</html>
