
<%- layout('layouts/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css"> <!-- Your custom styles -->
   
    <title>Signup</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: url('/images/background.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            overflow: hidden;
            animation: fadeIn 1s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        .signup-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 120vh;
            position: relative;
            overflow: hidden;
        }

        .signup-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            filter: blur(8px);
            z-index: -1;
            background: inherit;
        }

        .signup-form {
            position: relative;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
            transition: transform 0.3s, box-shadow 0.3s;
            background: rgba(0, 0, 0, 0.5); 
            opacity: 0;
            animation: slideIn 0.6s forwards;
        }

        @keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .signup-form:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
        }

        .signup-form h2 {
            margin-bottom: 1.5rem;
            font-size: 2rem;
            color: #009970;
            text-align: center;
        }

        .signup-form .form-group {
            margin-bottom: 1rem;
            position: relative;
        }

        .signup-form label {
            display: block;
            margin-bottom: 0.5rem;
            color: #fff;
            transition: color 0.3s;
        }

        .signup-form input {
            width: 100%;
            padding: 0.75rem;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .signup-form input:focus {
            border-color: #009970;
            box-shadow: 0 0 8px rgba(0, 153, 112, 0.5);
            outline: none;
        }

        .signup-form button {
            width: 100%;
            background-color: #009970;
            color: #fff;
            font-size: 16px;
            padding: 0.75rem;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .signup-form button:hover {
            background-color: #00b383;
            transform: scale(1.05);
        }

        .signup-form .login-link {
            text-align: center;
            margin-top: 1rem;
            color: #fff;
        }

        .signup-form .login-link a {
            color: #00b383;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

        .signup-form .login-link a:hover {
            color: #009970;
        }

        @media (max-width: 600px) {
            .signup-form {
                padding: 1.5rem;
            }

            .signup-form h2 {
                font-size: 1.5rem;
            }

            .signup-form input {
                font-size: 14px;
                padding: 0.5rem;
            }

            .signup-form button {
                font-size: 14px;
                padding: 0.5rem;
            }
        }

        /* Additional styles for 3D effect and animation */
.signup-form {
    position: relative;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    max-width: 400px;
    width: 100%;
    transition: transform 0.3s ease, box-shadow 0.3s ease, filter 0.3s ease;
    background: rgba(0, 0, 0, 0.5); 
    opacity: 0;
    animation: slideIn 0.6s forwards;
    perspective: 1000px; /* Perspective for 3D effect */
}

.signup-form:hover {
    transform: rotateX(10deg) rotateY(10deg) scale(1.05); /* 3D effect with scaling */
    box-shadow: 0 px 16px rgba(0, 0, 0, 0.4);
    border: #fff;
}

/* Optional: add a subtle shadow on hover to enhance the 3D effect */
.signup-form:hover::before {
    filter: blur(20px);
}

@keyframes slideIn {
    from {
        transform: translateY(20px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}



    </style>
</head>
<body>

    <div class="signup-container" >
        <div class="signup-form">
            <h2>Create Account</h2>
            <form action="/collegeclub/signup" method="POST">
                <div id="email-group" class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div id="username-group" class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div id="password-group" class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="submit">Sign Up</button>
            </form>
            
            <div class="google-btn">
                <a href="/auth/google" >Sign in with Google</a>
             </div>

            
            <div class="login-link">
                <p>Already have an account? <a href="/collegeclub/login">Log In</a></p>
            </div>

        </div>
    </div>
</body>
</html>
