        margin-top: 1rem;
        text-align: center;
    }

    .google-btn a {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: #db4437; /* Google red color */
        color: #fff;
        font-size: 16px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.3s ease;
