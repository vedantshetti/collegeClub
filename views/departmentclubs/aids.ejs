<%- layout('layouts/boilerplate') %>

<!-- Introduction Section -->
<div class="aids-intro">
    <h1>Hi, Welcome to Artificial Intelligence and Data Science Department!</h1>
    <p>Explore the amazing world of AI and Data Science with us.</p>
</div>

<div class="panclub-cards-container">
    <div class="panclub-card">
        <a href="/collegeclub/departmentclubs/aids/s4ds" class="panclub-card-link">
            <div class="panclub-card-image">
                <img src="/images/aids/s4ds.jpg" alt="S4DS">
            </div>
            <div class="panclub-card-content">
                <p class="panclub-title">S4DS</p>
            </div>
        </a>
    </div>

    <div class="panclub-card">
        <a href="/collegeclub/departmentclubs/aids/isa" class="panclub-card-link">
            <div class="panclub-card-image">
                <img src="/images/aids/isa.jpg" alt="ISA">
            </div>
            <div class="panclub-card-content">
                <p class="panclub-title">ISA</p>
            </div>
        </a>
    </div>
</div>

<style>
    /* Introduction Section Styling */
    .aids-intro {
        text-align: center;
        margin-top: 50px;
        color: rgb(17, 17, 17);
        opacity: 0; /* Start hidden */
        animation: fadeInUp 2s ease-out forwards; /* Animation applied */
    }

    .aids-intro h1 {
        font-size: 48px;
        margin-bottom: 20px;
    }

    .aids-intro p {
        font-size: 24px;
        font-weight: bold;
    }

    /* Keyframes for the fade-in and slide-up effect */
    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Card Container Styling */
    .panclub-cards-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
        margin-top: 30px;
    }

    .panclub-card {
        background-color: #333;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        transition: transform 0.3s ease;
        width: 250px;
        text-align: center;
    }

    .panclub-card-link {
        text-decoration: none;
        color: inherit;
    }

    .panclub-card-image img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .panclub-card-content {
        padding: 15px;
    }

    .panclub-title {
        font-size: 18px;
        font-weight: bold;
        margin: 0;
        color: #f0f0f0;
    }

    /* Increase card size and gap on larger screens */
    @media (min-width: 1024px) {
        .panclub-cards-container {
            gap: 85px;
        }

        .panclub-card {
            width: 300px;
        }

        .panclub-card-image img {
            height: 180px;
        }

        .panclub-title {
            font-size: 20px;
        }
    }

    /* Hover effect only on larger screens */
    @media (min-width: 768px) {
        .panclub-card:hover {
            transform: translateY(-5px);
        }
    }
</style>