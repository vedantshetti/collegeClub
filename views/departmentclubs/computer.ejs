<%- layout('layouts/boilerplate') %>

<!-- Animated Introduction -->
<div class="intro-text">
    <h1>Hi! Welcome to the Computer Science and Engineering Department</h1>
    <p>Explore the various clubs and initiatives!</p>
</div>

<div class="panclub-cards-container">
    <div class="panclub-card">
        <a href="/collegeclub/departmentclubs/computer/aces" class="panclub-card-link">
            <div class="panclub-card-image">
                <img src="/images/cse/aces.jpg" alt="ACES">
            </div>
            <div class="panclub-card-content">
                <p class="panclub-title">ACES</p>
            </div>
        </a>
    </div>

    <div class="panclub-card">
        <a href="/collegeclub/departmentclubs/computer/acm" class="panclub-card-link">
            <div class="panclub-card-image">
                <img src="/images/cse/acm.jpg" alt="ACM">
            </div>
            <div class="panclub-card-content">
                <p class="panclub-title">ACM</p>
            </div>
        </a>
    </div>
</div>

<style>
    .intro-text {
        color: black; /* Set text color to black */
        text-align: center;
        font-size: 28px;
        margin: 30px 0;
        opacity: 0;
        animation: fadeInUp 2s ease-in-out forwards;
    }

    .intro-text h1 {
        font-size: 48px;
        margin-bottom: 10px;
    }

    .intro-text p {
        font-size: 24px;
    }

    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Card Container Styling */
    .panclub-cards-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
        margin-top: 30px;
    }

    .panclub-card {
        background-color: #333;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        transition: transform 0.3s ease;
        width: 250px;
        text-align: center;
    }

    .panclub-card-link {
        text-decoration: none;
        color: inherit;
    }

    .panclub-card-image img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .panclub-card-content {
        padding: 15px;
    }

    .panclub-title {
        font-size: 18px;
        font-weight: bold;
        margin: 0;
        color: white; /* Keeping text color white for contrast */
    }

    /* Increase card size and gap on larger screens */
    @media (min-width: 1024px) {
        .panclub-cards-container {
            gap: 85px;
        }

        .panclub-card {
            width: 300px;
        }

        .panclub-card-image img {
            height: 180px;
        }

        .panclub-title {
            font-size: 20px;
        }
    }

    /* Hover effect only on larger screens */
    @media (min-width: 768px) {
        .panclub-card:hover {
            transform: translateY(-5px);
        }
    }
</style>
