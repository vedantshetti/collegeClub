<%- layout('layouts/boilerplate') %>

<% if (userEmail === 'vedantshetti123456@gmail.com') { %>
    <h2 class="section-title">SAIE CLUB INFORMATION</h2>

    <% if (saie && saie.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Department</th>
                    <th>Role</th>
                    <th>Year</th>
                    <th>Project Link</th>
                    <th>Resume</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Actions</th> <!-- New Actions column -->
                </tr>
            </thead>
            <tbody>
                <% saie.forEach(form => { %>
                    <tr>
                        <td><%= form._id %></td>
                        <td><%= form.fullName || 'N/A' %></td>
                        <td><%= form.email || 'N/A' %></td>
                        <td><%= form.phone || 'N/A' %></td>
                        <td><%= form.department || 'N/A' %></td>
                        <td><%= form.role || 'N/A' %></td>
                        <td><%= form.year || 'N/A' %></td>
                        <td><a href="<%= form.projectLink %>" target="_blank">Project Link</a></td>
                        <td><a href="<%= form.resume %>" target="_blank">Resume</a></td>
                        <td><%= form.createdAt.toDateString() || 'N/A' %></td>
                        <td><%= form.updatedAt.toDateString() || 'N/A' %></td>
                        <td>
                            <!-- Delete button -->
                            <form action="/collegeclub/admin/dashboard/saie/delete/<%= form._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this entry?');">
                                <button type="submit" class="delete-button">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p class="no-data">NO APPLICATIONS YET FOR SAIE!</p>
    <% } %>

<% } else { %>
    <p class="no-access">You do not have permission to view this data.</p>
<% } %>

<style>
    /* Add your common styles here */
    main {
        padding: 20px;
    }
    .container {
        width: 100%;
        margin: 0 auto;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    table, th, td {
        border: 1px solid #ddd;
    }
    th, td {
        padding: 10px;
        text-align: left;
    }
    th {
        background-color: #f4f4f4;
    }
    tr:nth-child(even) {
        background-color: #f9f9f9;
    }
    tr:hover {
        background-color: #f1f1f1;
    }
    .section-title {
        margin-top: 40px;
        font-size: 1.5em;
        color: #fff;
    }
    .no-data, .no-users {
        color: #fff;
    }
    .delete-button {
        background-color: #ff4d4d;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 3px;
    }
    .delete-button:hover {
        background-color: #ff1a1a;
    }
</style>
